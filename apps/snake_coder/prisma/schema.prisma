generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ModuleCategory {
  CERTIFICATIONS
  LIBRARIES
  FRAMEWORKS
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum MissionType {
  TASK
  BUGFIX
  QUIZ
  ARTICLE
}

enum MissionProgressStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskSubmissionStatus {
  PENDING
  PASSED
  FAILED
  ERROR
}

model User {
  id            String    @id @default(cuid())
  nickName      String?    @unique
  name          String?
  firstName     String?
  lastName      String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  accounts      Account[]
  sessions      Session[]

  xpTotal       Int       @default(0)
  xpMonth       Int       @default(0)
  xpToday       Int       @default(0)
  streakCurrent Int       @default(0)
  streakBest    Int       @default(0)
  streakUpdatedAt DateTime?
  planBonusClaimedAt DateTime?
  gradeAvg      Float?

  moduleAccess  UserModuleAccess[]
  missionProgress UserMissionProgress[]
  taskSubmissions TaskSubmission[]
  taskReviews  TaskReview[]
  quizAttempts  QuizAttempt[]
  dailyLogins  UserDailyLogin[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Module {
  id          String         @id @default(cuid())
  name        String         @unique
  code        String         @unique
  title       String
  description String
  requirements String[]
  category    ModuleCategory
  difficulty  Difficulty
  imagePath   String?
  isBuilding  Boolean        @default(false)

  sprints     Sprint[]
  missions    Mission[]
  access      UserModuleAccess[]

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model Sprint {
  id          String   @id @default(cuid())
  moduleId    String
  name        String
  order       Int
  title       String
  description String

  module      Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  missions    Mission[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([moduleId, order])
  @@unique([moduleId, name])
  @@index([moduleId])
}

model Mission {
  id              String                @id
  moduleId        String
  sprintId        String?
  type            MissionType
  difficulty      Difficulty
  title           String
  shortDesc       String
  description     String
  requirements    String[]
  hints           String[]
  etaMinutes      Int
  xp              Int
  timeLimitSeconds Int?
  passPercent     Int?

  module          Module                @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  sprint          Sprint?               @relation(fields: [sprintId], references: [id], onDelete: SetNull)

  task            Task?
  quiz            Quiz?
  article         Article?

  progress        UserMissionProgress[]

  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt

  @@index([moduleId])
  @@index([sprintId])
  @@index([type])
}

model Task {
  missionId  String   @id
  starterCode String
  language   String   @default("python")
  tests      Json?

  mission    Mission  @relation(fields: [missionId], references: [id], onDelete: Cascade)
  submissions TaskSubmission[]
  reviews     TaskReview[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model TaskSubmission {
  id              String              @id @default(cuid())
  userId          String
  taskId          String
  code            String
  status          TaskSubmissionStatus @default(PENDING)
  passedCount     Int                 @default(0)
  totalCount      Int                 @default(0)
  stdout          String?
  aiGrade         String?
  aiFeedback      String?
  timeSpentSeconds Int?

  user            User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  task            Task                @relation(fields: [taskId], references: [missionId], onDelete: Cascade)

  createdAt       DateTime            @default(now())

  @@index([userId, createdAt])
  @@index([taskId, createdAt])
}

model TaskReview {
  id        String   @id @default(cuid())
  userId    String
  taskId    String
  code      String   @db.Text
  grade     String
  feedback  String   @db.Text
  model     String?

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  task      Task     @relation(fields: [taskId], references: [missionId], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([taskId, createdAt])
}

model Quiz {
  missionId  String   @id
  questions  Json     @default("[]")

  mission    Mission  @relation(fields: [missionId], references: [id], onDelete: Cascade)
  attempts   QuizAttempt[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model QuizAttempt {
  id              String   @id @default(cuid())
  userId          String
  quizId          String
  answers         Json
  score           Int
  total           Int
  percent         Int
  passed          Boolean
  timeSpentSeconds Int?

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  quiz            Quiz      @relation(fields: [quizId], references: [missionId], onDelete: Cascade)

  createdAt       DateTime @default(now())

  @@index([userId, createdAt])
  @@index([quizId, createdAt])
}

model Article {
  missionId  String   @id
  tags       String[]
  blocks     Json
  summary    String[]

  mission    Mission  @relation(fields: [missionId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model UserMissionProgress {
  userId          String
  missionId       String
  status          MissionProgressStatus @default(TODO)
  startedAt       DateTime?
  completedAt     DateTime?
  lastOpenedAt    DateTime?
  xpEarned        Int?
  grade           String?
  timeSpentSeconds Int?
  testAttemptsCount Int              @default(0)
  userCode        String? @db.Text @map("user_code")

  user            User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  mission         Mission @relation(fields: [missionId], references: [id], onDelete: Cascade)

  @@id([userId, missionId])
  @@index([userId, status])
  @@index([missionId])
}

model UserModuleAccess {
  userId    String
  moduleId  String
  hasAccess Boolean @default(false)
  startedAt DateTime?
  completedAt DateTime?

  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  module    Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@id([userId, moduleId])
  @@index([moduleId])
}

model AnalyticsLog {
  id               String   @id @default(cuid())
  event            String
  userId           String?
  sessionId        String?
  missionId        String?
  missionType      String?
  xpAwarded        Int?
  timeSpentSeconds Int?
  attemptsCount    Int?
  streakCurrent    Int?
  payload          Json?
  createdAt        DateTime @default(now())

  @@index([event, createdAt])
  @@index([userId, createdAt])
}

model UserDailyLogin {
  id        String   @id @default(cuid())
  userId    String
  loginDate DateTime
  loggedAt  DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, loginDate])
  @@index([loginDate])
}
